---
const { startDate, endDate, category } = Astro.props;

const formatYear = (date: Date) => new Date(date).getFullYear();
const start = formatYear(startDate);
const end = endDate ? formatYear(endDate) : null;
const range = end ? `${start} – ${end}` : start;
---

<div class="flex flex-wrap items-center gap-3 text-xs text-zinc-500 mb-3">
  <span>{range}</span>
  {category && (
    <>
      <span>•</span>
      <span>{category}</span>
    </>
  )}
</div>
