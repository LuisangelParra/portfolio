---
const { data } = Astro.props;
---

<div class="bg-zinc-900/40 rounded-xl border border-zinc-800/60 p-8 space-y-8 backdrop-blur-sm">

  <!-- Roles -->
  {data.roles && (
    <div>
      <h3 class="text-xs text-zinc-500 uppercase tracking-wide mb-2">Roles</h3>
      <ul class="space-y-1 text-sm text-zinc-300">
        {data.roles.map((role : string) => <li>{role}</li>)}
      </ul>
    </div>
  )}

  <!-- Contributors -->
  {data.contributors && (
    <div>
      <h3 class="text-xs text-zinc-500 uppercase tracking-wide mb-2">Contributors</h3>
      <ul class="space-y-1 text-sm text-zinc-300">
        {data.contributors.map((c : string) => <li>{c}</li>)}
      </ul>
    </div>
  )}

  <!-- Clients -->
  {data.clients && (
    <div>
      <h3 class="text-xs text-zinc-500 uppercase tracking-wide mb-2">Clients</h3>
      <ul class="space-y-1 text-sm text-zinc-300">
        {data.clients.map((c : string) => <li>{c}</li>)}
      </ul>
    </div>
  )}

  <!-- Technologies -->
  <div>
    <h3 class="text-xs text-zinc-500 uppercase tracking-wide mb-2">Technologies</h3>
    <div class="flex flex-wrap gap-2">
      {data.technologies.map((tech : string) => (
        <span class="px-2 py-1 rounded-md bg-zinc-800/70 border border-zinc-700/50 text-xs text-zinc-300">
          {tech}
        </span>
      ))}
    </div>
  </div>

</div>
